#include<bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef vector<int> vi;
typedef pair<int,int> pi;


int main()
{	ios::sync_with_stdio(0);
	cin.tie(0);  
	int tk;
	cin>>tk;
	while(tk--){
		ll a,b,o1=1,o2=1,e1=1,e2=1,s=0;
		cin>>a>>b;
		if(a%2==0){
			e1 = a/2;
			o1 = a/2;
			
		}
		else {
			o1 = (a+1)/2;
			e1 = (a+1)/2;
		}
		
		if(b%2==0){
			e2 = b/2;
			o2 = b/2;
		}
		else{
			e2 = (b-1)/2;
			o2 = (b+1)/2;		}
			
			s = o1*o2 + e1*e2;
			cout<<s<<endl;
	}

return 0;
}


